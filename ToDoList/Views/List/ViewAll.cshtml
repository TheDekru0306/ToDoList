@model List<ToDoList.Models.ListViewModel>



<table class="table" style="table-layout: fixed">
    <thead>
        <tr>
            <th scope="col"><h2>Title</h2></th>
            <th scope="col"><h2>Content</h2></th>
            <th colspan="2" scope="col"><h2>Option</h2></th>
        </tr>
    </thead>
    <tbody>   
        @foreach (var list in Model)
        {
        <tr>
            <td style="word-wrap: break-word">@list.Title</td>
            <td style="word-wrap: break-word">@list.Content</td>
            <td>@Html.ActionLink("Edit", "Edit", "List", new { id = list.Id }, new { @class = "btn btn-warning" })</td>
            <td>@Html.ActionLink("Delete", "Delete", "List", new { id = list.Id }, new { @class = "btn btn-warning" })</td>
        </tr>
        }     
    </tbody>
</table>


